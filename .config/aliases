alias rangerc='vim ~/.config/ranger/rc.conf'
alias rofirc='vim ~/.config/rofi/config.rasi'
alias sources='sudo vim /etc/apt/sources.list'
alias subs='vim ~/.config/ytfzf/subscriptions'
alias taskrc='~/.taskrc'
alias treevw='tree -L 1 ~/Documents/wiki'
alias vimrc='vim ~/.vimrc'
alias zathurarc='vim ~/.config/zathura/zathurarc'
