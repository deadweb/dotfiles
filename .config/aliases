# Commands

#alias ls='~/.local/bin/ls'
#alias tar='tar -cvf'
#alies unzip="unzip x"
alias ar='sudo apt autoremove'
alias aremove='sudo apt autoremove'
alias autoremove='sudo apt autoremove'
#alias dotfiles='/usr/bin/git --git-dir=$HOME/.config/dotfiles/ --work-tree=$HOME'
alias dotfiles='git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME'
alias dotpush='f() { git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME add -f "$1";  git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME commit -m "${2:-update}"; git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME push -u origin main --force; }; f'
alias du='sudo apt dist-upgrade'
alias fetch='~/.local/bin/fastfetch'
alias fetchrc='vim ~/.config/fastfetch/config.conf'
alias install='sudo apt install'
#alias ls='lsd'
alias music='ncmpcpp'
alias purge='sudo apt purge'
alias reinstall='sudo apt install --reinstall'
alias remove='sudo apt remove'
alias ssh='kitten ssh'
alias targz='tar -czvf'
alias tt='~/.local/bin/taskwarrior-tui'
alias un7z='7za x'
alias untar='tar xzvf'
alias unxz='xz -d -v'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'
alias uu='sudo apt update && sudo apt upgrade'
alias vw='vim ~/Documents/wiki/index.md'
alias yt='ytfzf'
alias ytda='yt-dlp --extract-audio --audio-format mp3 -ciw -o "%(title)s.%(ext)s" -v'
alias ytdv='yt-dlp "%(title)s.%(ext)s"'
alias yts='i3-msg split h & i3-msg layout tabbed & ytfzf -c S'

